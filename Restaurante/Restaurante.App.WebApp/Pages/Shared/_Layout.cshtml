<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurante.App.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/main.css">
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Indie+Flower&display=swap"
        rel="stylesheet" />

    <!-- Icons -->
    <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet" />
</head>

<body class="block">
    <!-- cabecera Banner -->
    <header class="banner fixed-top d-flex algn-items-center ">
        <div class="container d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center justify-content-between">
                <img src="Img/logo.jpg" alt="logo.image" />
                <div class="row">
                    <h1 class="brand-text">
                        Mi Restaurante
                        <br /> <span class="min-text">Get Started</span>
                    </h1>
                </div>
            </a>
            <nav class="navbar navbar-expand-lg ">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    Link
                                </a>
                            </li>
                        </ul>
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                            <button class="btn btn-outline-success" type="submit">
                                Search
                            </button>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
    </header> <!-- Fin Banner -->

    <main role="main" class="pb-3">
        @RenderBody()
        <!-- Inicio Pie De pagina -->
        <footer class="footer">
            <div class="container">
                <div class="row gy-3">
                    <div class="col-lg-3 col-md-6 d-flex">
                        <i class="icon ion-md-locate"></i>
                        <div>
                            <h4>Direccion</h4>
                            <p>
                                ejemplo aqui <br />
                                mas ejemplos aqui
                                <br />
                            </p>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links d-flex">
                        <i class="icon ion-md-call"></i>
                        <div>
                            <h4>Reservaciones</h4>
                            <p>
                                <strong>Telefono:</strong> +telefono aqui
                                <br />
                                <strong>Email:</strong> ejemplo.email@example.com
                                <br />
                            </p>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links d-flex">
                        <i class="icon ion-md-time"></i>
                        <div>
                            <h4>Horario</h4>
                            <p>
                                <strong>Lunes - Sabados</strong> Todo el dia
                                <br />
                                Domingos cerrado
                            </p>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <h4>Links de referencia</h4>
                        <div class="social-links d-flex">
                            <a href="#" class="twitter">
                                <i class="icon ion-logo-twitter"></i>
                            </a>
                            <a href="#" class="facebook">
                                <i class="icon ion-logo-facebook"></i>
                            </a>
                            <a href="#" class="instagram">
                                <i class="icon ion-logo-instagram"></i>
                            </a>
                            <a href="#" class="linkedin">
                                <i class="icon ion-logo-linkedin"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </footer><!-- Final Pie De pagina -->
    </main>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
