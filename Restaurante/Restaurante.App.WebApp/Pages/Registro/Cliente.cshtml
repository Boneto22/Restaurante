@page
@model restaurante.app.webapp.pages.ClienteModel
@{
}

<section class="message d-flex align-items-center section-bg bg-light">
    <div class="container">
        <div class="row justify-content-between gy-5">
            <div
                class="col-lg-4 order-1 order-lg-1 d-flex flex-column justify-content-center align-items-center align-items-lg-start text-center text-lg-start p-4 ">
                <div class="row m-2">
                    <h2 class="col-12 max-text">Gracias Por registrarte</h2>
                    <span class="col-12 min-text">Esto es un mensaje de bienvenida</span>
                </div>
                <p class="min-text">
                    Sed autem laudantium dolores. Voluptatem itaque ea consequatur eveniet.
                    Eum quas beatae cumque eum quaerat.
                </p>
            </div>

            <div class="col-lg-6 order-2 order-lg-2 text-center text-lg-start">
                <form action="" class="p-2">
                    <div class="d-flex flex-column px-4">
                        <span class="span-text">Completa El formulario</span>
                        <span class="span-text text-primary">Para comenzar</span>
                    </div>
                    <div class="mt-3 px-4">
                        <input type="password" class="form-control" placeholder="Documento">
                    </div>
                    <div class="mt-3 px-4">
                        <input type="text" class="form-control" placeholder="Nombre">
                    </div>
                    <div class="mt-3 px-4">
                        <input type="text" class="form-control" placeholder="Apellido">
                    </div>
                    <div class="mt-3 px-4">
                        <input type="number" class="form-control" placeholder="Telefono">
                    </div>
                    <div class="mt-3 px-4">
                        <input type="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="d-flex justify-content-start mt-3 px-4">
                        <div class="form-check ">
                            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                            <label class="form-check-label" for="defaultCheck1">
                                <span class="min-text">Acepta Los Terminos y condiciones para continuar</span>
                            </label>
                        </div>
                    </div>
                    <div class="my-2 px-4">
                        <button type="button" class="btn btn-primary btn-lg btn-block ">Aceptar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
